---
export interface Props {
  projects: Array<{
    name: string;
    href: string;
  }>;
}

const { projects } = Astro.props;
---

<section class="project-content">
  <h2>Projects</h2>
  <ul>
    {
      projects.map((project) => (
        <li class="project">
          <a href={project.href}>{project.name}</a>
        </li>
      ))
    }
  </ul>
</section>

<style scoped>
  .project-content {
    flex-basis: 26%;
    animation: showProjects 3s normal forwards ease-in;
  }

  h2 {
    font-size: 2rem;
    font-style: normal;
  }

  ul {
    margin-top: 50px;
    list-style: none;
  }

  li a {
    color: inherit;
    text-decoration: none;
    font-size: 1rem;
    padding-bottom: 10px;
    width: fit-content;
    border-bottom-width: 3px;
    border-style: solid;
    border-image: linear-gradient(
        135deg,
        rgb(255, 14, 14) 0%,
        rgb(201, 1, 88) 50%
      )
      0 0 100% 0;
    transition: all 0.3s ease-in;
  }

  li:hover {
    letter-spacing: 1px;
    space: 1.1;
  }

  li::first-letter {
    text-transform: capitalize;
  }

  li:not(:last-child) {
    margin-bottom: 2.4rem;
  }

  @media (max-width: 768px) {
    .project-content {
      flex-basis: 100%;
      width: 100%;
      margin-top: 30px;
      gap: 30px;
      border-bottom-width: 3px;
      border-style: solid;
      border-image: linear-gradient(
          135deg,
          rgb(255, 14, 14) 0%,
          rgb(201, 1, 88) 50%
        )
        0 0 0 100%;
      padding: 10px;
    }

    h2 {
      margin-bottom: 20px;
    }

    ul {
      margin-top: 0;
    }
  }

  @keyframes showProjects {
    from {
      opacity: 0;
    }
    70% {
      opacity: 0.6;
    }
    to {
      opacity: 1;
    }
  }
</style>
